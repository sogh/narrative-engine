{
    "greeting": Rule(
        requires: [],
        excludes: [],
        alternatives: [
            (weight: 3, text: "Hello, {entity.name}."),
            (weight: 2, text: "Good evening, {entity.name}."),
            (weight: 1, text: "{subject} nodded in greeting."),
        ],
    ),
    "tense_observation": Rule(
        requires: ["mood:tense"],
        excludes: [],
        alternatives: [
            (weight: 2, text: "The air felt heavy with unspoken words."),
            (weight: 2, text: "A silence settled over the room."),
            (weight: 1, text: "No one dared to speak first."),
        ],
    ),
    "action_detail": Rule(
        requires: [],
        excludes: [],
        alternatives: [
            (weight: 2, text: "{subject} paused for a moment."),
            (weight: 2, text: "{subject} glanced around the room."),
            (weight: 1, text: "There was a flicker of something unreadable in {possessive} expression."),
        ],
    ),
    "confrontation_opening": Rule(
        requires: ["mood:tense"],
        excludes: [],
        alternatives: [
            (weight: 3, text: "{subject} stepped forward. {action_detail} {tense_observation}"),
            (weight: 2, text: "{tense_observation} {action_detail}"),
        ],
    ),
    "calm_greeting": Rule(
        requires: [],
        excludes: ["mood:tense"],
        alternatives: [
            (weight: 1, text: "Everything seemed perfectly normal."),
        ],
    ),
    "recursive_bomb": Rule(
        requires: [],
        excludes: [],
        alternatives: [
            (weight: 1, text: "{recursive_bomb} again"),
        ],
    ),
    "markov_test": Rule(
        requires: [],
        excludes: [],
        alternatives: [
            (weight: 1, text: "She said {markov:dialogue:accusatory} quietly."),
        ],
    ),
    "possession_claim": Rule(
        requires: [],
        excludes: [],
        alternatives: [
            (weight: 2, text: "\"That one is {possessive_standalone},\" {subject} insisted."),
            (weight: 2, text: "{subject} kept it for {reflexive}."),
            (weight: 1, text: "{subject} claimed the seat was {possessive_standalone} and settled into it {reflexive}."),
        ],
    ),
}
